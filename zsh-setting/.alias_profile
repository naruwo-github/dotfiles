alias c='clear'

# eza plugin
alias ls='eza'
alias ll='eza -l'
alias la='eza -la'

# ls after cd
cdls () {
  \cd "$@" && ls
}
alias cd="cdls"

# move often
alias cdssh='cd ~/.ssh'
alias cdd='cd ~/Developer'
alias ..='cd ..'
alias ...='cd ../../'
alias ....='cd ../../../'

# safety net
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

# git
alias g='git'
alias ga='git add'
alias gb='git branch'
alias gco='git checkout'
alias gcl='git clone'
alias gc='git commit'
alias gc-m='git commit'
alias gd='git diff'
alias gf='git fetch'
alias gl='git log'
alias gs='git status'
alias gsta='git stash'
alias gp='git push'
alias gpl='git pull origin'
alias gm='git merge'

# docker
alias d='docker'
alias dc='docker compose'
alias dsp='docker system prune'
alias dvp='docker volume prune'

# lazyxxx
alias lzg='lazygit'
alias lzd='lazydocker'

# gcloud
alias glogin='gcloud auth login --update-adc'
